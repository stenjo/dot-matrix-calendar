{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "meson",
            "mode": "build",
            "problemMatcher": [
                "$meson-gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "Meson: Build all targets"
        }
    ],
    "version": "2.0.0"
}