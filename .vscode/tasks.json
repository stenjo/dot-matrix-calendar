{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ESP32",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },      
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build MicroPython ESP8266",
            "type": "shell",
            "command": "make",
            "args": [
                "-j4"
            ],
            "options": {
                "cwd": "${workspaceFolder}/lib/micropython/ports/esp8266"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "~/esp/xtensa-lx106-elf/bin/xtensa-lx106-elf-g++",
            "args": [
                "-I${workspaceFolder}/lib/micropython",
                "-I${workspaceFolder}/lib/micropython/ports/esp8266",
                "-I${workspaceFolder}/lib/micropython/py",
                "-I${workspaceFolder}/boards/ESP8266_GENERIC",
                "-I${workspaceFolder}/cmodules/uICAL/src/uICAL",
                "-I${workspaceFolder}/cmodules/uICAL/src",
                "-I${workspaceFolder}/build",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Build MicroPython Component",
            "type": "shell",
            "command": "~/esp/xtensa-lx106-elf/bin/xtensa-lx106-elf-gcc",
            "args": [
                "-I${workspaceFolder}/lib/micropython",
                "-I${workspaceFolder}/lib/micropython/ports/esp8266",
                "-I${workspaceFolder}/lib/micropython/py",
                "-I${workspaceFolder}/boards/ESP8266_GENERIC",
                "-I${workspaceFolder}/cmodules/uICAL/src/uICAL",
                "-I${workspaceFolder}/cmodules/uICAL/src",
                "-I${workspaceFolder}/build",
                "-Wall ",
                "-Wextra ",
                "-Os",
                "-E",
                "-Wpointer-arith",
                "-Werror",
                "-std=gnu99",
                "-nostdlib",
                "-fsingle-precision-constant",
                "-Wdouble-promotion",
                "-fno-inline-functions",
                "-Wl",
                "-EL",
                "-mlongcalls",
                "-mtext-section-literals",
                "-mforce-l32",
                "-fdata-sections",
                "-ffunction-sections",
                "-g",
                "${file}",  // This represents the file currently open in the editor
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"  // This sets the output filename
            ],
            "options": {
                "cwd": "${workspaceFolder}" // Set correct working directory
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}